<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Plan Details</title>
    
	#parse("css.vm")
	
	#parse("Javascript.vm")
</head>
  <body>
    <div class="wrapper">
		<header class="header">
			#parse("menu.vm")
		</header>
		<div class="container-fluid">
		    <div class="row-fluid" id="formConatiner">
			    <div class="span12">
				    <div class="well">
						<h4>Feedback</h4>
						<div class="accordion" id="accordion2">
                    		<div class="accordion-group">
                                <div class="accordion-heading">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                                    <h5>Your Feedback</h5>
                                    </a>
                                </div>
                                <div id="collapseOne" class="accordion-body collapse in">
                    				<div class="accordion-inner">
            								<dl class="dl-horizontal">
                                              <dt>Comment</dt>
                                              <dd><textarea id="comment"></textarea></dd>
                                              <dt></dt>
                                              <dd><img id="like" src="resources/images/like.jpg" height="20" width="20">&nbsp;</img><img id="dislike" src="resources/images/dislike.jpg" height="20" width="20"></img></dd>
                                            </dl>
                                    </div>
                                </div>
                            </div>
                		</div>
				    </div>
			    </div>
		     </div>
		</div>
		<footer class="footer">
			#parse("footer.vm")
		</footer>
    </div>
    <script type="text/javascript">
		
		#[[$]]#.ajax({
			type: "GET",
			url: "http://localhost:8080/csurvay/featurefeedback/"+'$user'+".do",
			data:'',
			headers: { 
		        Accept : "application/json"
			},
			success: function(response){
				var featureURL = response.featureInfo.url;
				alert("url - " + featureURL)
				#[[$]]#.ajax({
    				type: "GET",
					url: featureURL,
					data:'',
					headers: { 
		 		       Accept : "application/json"
					},
					success: function(response){
						if(response.feature.feedbacks != null){
							$("#comment").val(response.feature.feedbacks[0].comment);
							$("#comment").attr("disabled","disabled");
							if(response.feature.feedbacks[0].like == true){
								$("#dislike").css("display","none");
							}else{
								$("#like").css("display","none");
							}	
						}
						else{
							
						}
					},
			error: function(e){
            	alert('Error: ' + e);
         	}
    	});
			},
			error: function(e){
            	alert('Error: ' + e);
         	}
		});

    	
    </script>
  </body>
</html>