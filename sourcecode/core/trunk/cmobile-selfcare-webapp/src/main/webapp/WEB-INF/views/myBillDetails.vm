<!--myBillDetails.vm start-->
<!DOCTYPE html>
<head>
<title>My Bill Details</title>
	<link type="text/css" rel="stylesheet" href="resources/bootstrap/css/bootstrap.css"/>
	<link type="text/css" rel="stylesheet" href="resources/bootstrap/css/bootstrap-responsive.css"/>
    <link href="resources/css/reset-bill.css" rel="stylesheet" type="text/css" />
    <link href="resources/css/style-bill.css" rel="stylesheet" type="text/css" />
    <link href="resources/css/mobile.css" rel="stylesheet" type="text/css" />
    <link href="resources/css/tab.css" rel="stylesheet" type="text/css" />
</head>

<html lang="en">
	<body class="body">
		<script src="resources/jquery-1.9.1.js"></script>
		<script src="resources/js/main.js"></script>
		<script src="resources/js/chart.js"></script>
		
    <header class="header">
    </header>
      <div class="container">
		
		#if($myBillVO.lastBillFlag)
			<div class="row1 row clearfix">
				<div class="sec1">
					<img class="iconImg" src="resources/images/mobile_phone.png" />
				</div>
			
				<div class="sec2">
					<div class="section-wrapper">
						<h2 class="heading-titles">Last Bill</h2>
						<dl class="dl-horizontal">
                            <dt>Bill Amount</dt>
                            <dd>$myBillVO.lastBill $</dd>
							<dt>You were billed on</dt>
                            <dd>$myBillVO.lastBillDate</dd>
							<dt>Payment due on</dt>
                            <dd>$myBillVO.lastBillDueDate</dd>
                         </dl>
						<a class="more-link" href="#">More Details</a>
					</div>
				</div>
			 </div>
		#end
		
		 #if($myBillVO.recentChargesFlag)
		<div class="row2 row clearfix">
			<div class="sec1">
				<img class="iconImg" src="resources/images/mobile_phone.png" />				
			</div>
			
			<div class="sec2">
		         <div class="section-wrapper">
					<h2 class="heading-titles">Your Latest Bill is</h2>
					<label class="result">$myBillVO.recentCharges</label>
					<h2 class="result-units">$</h2>
					<a class="more-link" href="#">More Details</a>
			      </div>
			</div>
		</div>
		#end 
		
		#if($myBillVO.lastPaymentFlag)
		<div class="row3 row clearfix">
			<div class="sec1">
				<canvas id="billGraph" width="400" height="400"></canvas>
			</div>
			
			<div class="sec2">
			    <div class="section-wrapper">
					<h2 class="heading-titles">Your Next Bill date is </h2>
					<label class="result">$myBillVO.nextBillDate</label>
					<a class="more-link" href="#">More Details</a>
			    </div>
			</div>
		</div>
		#end 
		
		<div class="row4 row clearfix">
			<div class="sec1">
				<canvas id="myChart" width="400" height="400"></canvas>
			</div>
			<div class="sec2">
			    <div class="section-wrapper">
				<h2 class="heading-titles">UK Data</h2>
				<h2 class="subheading-titles">remaining</h2>
				<label class="result">$myBillVO.lastPaymentDate</label>
				<h2 class="result-units">MB</h2>
				<a class="more-link" href="#">More Details</a>
			    </div>
			</div>
		</div>
    </div>
    <footer class="footer">
    </footer>
</body>
</html>
<!--myBillDetails.vm end-->