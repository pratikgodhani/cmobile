<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Plan Details</title>
    
	#parse("css.vm")
	
	#parse("Javascript.vm")
</head>
  <body>
    <div class="wrapper">
		<header class="header">
			#parse("menu.vm")
		</header>
		<div class="container-fluid">
		    <div class="row-fluid" id="formConatiner">
			    <div class="span12">
				    <div class="well">
						<h4>Plan Details</h4>
						<div class="accordion" id="accordion2">
                    		<div class="accordion-group">
                                <div class="accordion-heading">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                                    Your subscribed plans
                                    </a>
                                </div>
                                <div id="collapseOne" class="accordion-body collapse in">
                    				<div class="accordion-inner">
                                        #foreach( $plan in $response.result )
            								<dl class="dl-horizontal">
                                              <dt>Plan name</dt>
                                              <dd>$plan.name</dd>
                                              <dt>Plan description</dt>
                                              <dd>$plan.description</dd>
                                              <dt>Salient features</dt>
                                              <dd>#foreach($feature in $plan.features)
                                					#if( $feature.visible)
                                						$feature.name $feature.description<br/>			
                                					#end
                								#end</dd>
                                            </dl>
                    					#end
                                    </div>
                                </div>
                            </div>
                		</div>
				    </div>
			    </div>
		     </div>
		</div>
		<footer class="footer">
			#parse("footer.vm")
		</footer>
    </div>
  </body>
</html>